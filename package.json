{
  "name": "hotel-listing-react",
  "version": "1.0.0",
  "description": "A hotel listing and sorting app for Qantas.",
  "engines": {
    "node": "^22.14.0",
    "npm": "^10.9.2"
  },
  "main": "src/index.tsx",
  "scripts": {
    "start": "webpack serve --mode development",
    "clean": "rimraf dist",
    "build": "npm run clean && cross-env NODE_ENV=production webpack --mode production",
    "test": "jest --testMatch='**/*.test.(ts|tsx)'",
    "test:coverage": "jest --testMatch='**/*.test.(ts|tsx)' --coverage",
    "test:watch": "jest --watch --testMatch='**/*.test.(ts|tsx)'",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "lint": "eslint **/*.{js,jsx,ts,tsx}",
    "lint:fix": "eslint **/*.{js,jsx,ts,tsx} --fix --max-warnings=0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:juanchomdiaz/hotel-listing-react.git"
  },
  "keywords": [
    "react",
    "typescript",
    "jest",
    "webpack"
  ],
  "author": "Juan M. Diaz",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/juanchomdiaz/hotel-listing-react/issues"
  },
  "homepage": "https://github.com/juanchomdiaz/hotel-listing-react#README.md",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "^9.22.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.12",
    "@types/mini-css-extract-plugin": "^2.5.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "babel-loader": "^10.0.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "eslint": "^9.21.0",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^16.0.0",
    "html-webpack-plugin": "^5.6.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.2",
    "prettier": "^3.5.2",
    "rimraf": "^6.0.1",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.26.1",
    "typescript-plugin-css-modules": "^5.1.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  }
}